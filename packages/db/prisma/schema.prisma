generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Seller{
  s_id           Int    @id      @default(autoincrement())
  email               String @unique
  password            String 
  bike_product        Bike_Product[]
  accessory_product   Accessory_Product[]
}

model Bike_Product{
  id            String  @id   @default(uuid())
  name          String
  year          String
  km_driven     Int
  specs         String
  description   String
  isSecondHand  Boolean @default(false)
  price         Int
  discount      Int
  images        String[]
  seller_id     Int
  seller        Seller  @relation(fields:[seller_id],references:[s_id],onDelete:Cascade)     
}

model Accessory_Product{
  id          String  @id   @default(uuid())
  name        String
  specs       String
  description String
  price       Int
  discount    Int
  images      String[]
  seller_id   Int
  seller      Seller  @relation(fields:[seller_id],references:[s_id],onDelete:Cascade)
}